{% extends 'layouts/base.html.twig' %}

{% block title %}{{ subject.title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div style="float:left;">
	{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
			<button class="m-5"><a href="{{ path('app_create', {'id': subject.id }) }}">Nouveau post</a></button>
	{% endif %}
</div>

<div class="container table table-bordered mt-3">
	<thead>
		<tr>
			<th>
		    <h1>Forum, {{ subject.title }}</h1>
		    <hr>
		    </th>
		</tr>
	</thead>
	<tbody>
		{% for posts in posts %}
				<div class="post">
					<a href="{{ path('app_show', {'id': posts.id }) }}"><h3>{{ posts.title }}</h3></a>
					<small><b>{{ posts.author }}</b> - {{ posts.postAt|date("l d F - H:i") }}</small>
				</div>
				<hr>
		{% endfor %}
	</tbody>
</div>
{% endblock %}	